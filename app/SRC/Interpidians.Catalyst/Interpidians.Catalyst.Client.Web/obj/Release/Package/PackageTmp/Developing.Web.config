<?xml version="1.0" encoding="utf-8"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  http://go.microsoft.com/fwlink/?LinkId=169433
  -->

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  <section name="dataConfiguration" type="Microsoft.Practices.EnterpriseLibrary.Data.Configuration.DatabaseSettings, Microsoft.Practices.EnterpriseLibrary.Data, Version=5.0.505.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" requirePermission="true" />
  </configSections>
  
  <appSettings>
    <add key="webpages:Version" value="2.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="PreserveLoginUrl" value="true" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <add key="log4net.Config" value="log4net.config" />
    <add key="log4net.Config.Watch" value="True" />
    <add key="log4net.Internal.Debug" value="true" />
    
    <!--Following are custom Keys-->
    <add key="DocumentDirectory" value="Documents" />
    
  </appSettings>
  
  <connectionStrings>
    <!--<add name="CATALYST" connectionString="Data Source=.;Initial Catalog=CatalystPOC; User ID=sa;Password=P@ssw0rd123;" providerName="System.Data.SqlClient" />-->
    <add name="CATALYST" connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=CatalystPOC; Integrated Security=true" providerName="System.Data.SqlClient" />
  <add name="CATALYST-SUBHASH" connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=CatalystPOC_subhash; Integrated Security=true" providerName="System.Data.SqlClient" />
    <add name="CATALYST-SUBHASH-20170527" connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=CatalystPOC_subhash_20170527; Integrated Security=true" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <system.web>
   
    <compilation debug="true" targetFramework="4.0" />

    <pages>
      <namespaces>
        <add namespace="System.Web.Helpers" />
        <add namespace="System.Web.Mvc" />
        <add namespace="System.Web.Mvc.Ajax" />
        <add namespace="System.Web.Mvc.Html" />
        <add namespace="System.Web.Routing" />
        <add namespace="System.Web.WebPages" />
      </namespaces>
    </pages>

    <customErrors mode="RemoteOnly">
      <error statusCode="404" redirect="~/Error/NotFound" />
      <error statusCode="500" redirect="~/Error/Index" />
    </customErrors>
    
  </system.web>

  <system.webServer>
    <validation validateIntegratedModeConfiguration="false" />

    <modules runAllManagedModulesForAllRequests="true">
      <!-- For integrated mode -->
      <add type="Interpidians.Catalyst.DependencyResolution.HttpDependencyConfigurationModule, Interpidians.Catalyst.DependencyResolution" name="DependencyResolution" />
    </modules>
    
  <handlers>
      <remove name="ExtensionlessUrlHandler-ISAPI-4.0_32bit" />
      <remove name="ExtensionlessUrlHandler-ISAPI-4.0_64bit" />
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <add name="ExtensionlessUrlHandler-ISAPI-4.0_32bit" path="*." verb="GET,HEAD,POST,DEBUG,PUT,DELETE,PATCH,OPTIONS" modules="IsapiModule" scriptProcessor="%windir%\Microsoft.NET\Framework\v4.0.30319\aspnet_isapi.dll" preCondition="classicMode,runtimeVersionv4.0,bitness32" responseBufferLimit="0" />
      <add name="ExtensionlessUrlHandler-ISAPI-4.0_64bit" path="*." verb="GET,HEAD,POST,DEBUG,PUT,DELETE,PATCH,OPTIONS" modules="IsapiModule" scriptProcessor="%windir%\Microsoft.NET\Framework64\v4.0.30319\aspnet_isapi.dll" preCondition="classicMode,runtimeVersionv4.0,bitness64" responseBufferLimit="0" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="GET,HEAD,POST,DEBUG,PUT,DELETE,PATCH,OPTIONS" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  
  
    <!--Added purposely because encryption creates such characters-->
    <security>
        <requestFiltering allowDoubleEscaping="true"/>
    </security>
  
  </system.webServer>

  <system.web.extensions>
    <scripting>
      <webServices>
        <jsonSerialization maxJsonLength="2147483647" />
      </webServices>
    </scripting>
  </system.web.extensions>
  
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Mvc" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.0.0" newVersion="4.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>

  <log4net>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file name="File" value="Logs/Catalyst_logs_" />
      <staticLogFileName value="false" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <appendToFile value="true" />
      <maximumFileSize value="2MB" />
      <maxSizeRollBackups value="5" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyy_MM_dd.'txt'" />
      <layout type="log4net.Layout.PatternLayout">
        <!--<conversionPattern value="%level %thread %logger – %message%newline" />-->
        <conversionPattern value="------------------[%d{DATE}]------------------ %newline %level - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="RollingFile" />
    </root>
  </log4net>
  
<!--<dataConfiguration defaultDatabase="CATALYST" />-->
<!--<dataConfiguration defaultDatabase="CATALYST-SUBHASH" />-->
  <dataConfiguration defaultDatabase="CATALYST-SUBHASH-20170527" />
</configuration>
